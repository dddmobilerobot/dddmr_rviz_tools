<library path="dddmr_rviz_default_plugins">

  <class
    name="dddmr_rviz_default_plugins/3DGoalPose"
    type="dddmr_rviz_default_plugins::tools::GoalTool3D"
    base_class_type="rviz_common::Tool"
  >
    <description>
      Publish a goal pose for the robot.  After one use, reverts to default tool.
    </description>
  </class>

  <class
    name="dddmr_rviz_default_plugins/3DInitialPose"
    type="dddmr_rviz_default_plugins::tools::InitialPoseTool3D"
    base_class_type="rviz_common::Tool"
  >
    <description>
      Publish an initial pose for the robot.  After one use, reverts to default tool.
    </description>
  </class>

  <class
    name="dddmr_rviz_default_plugins/SelectEdge"
    type="dddmr_rviz_default_plugins::tools::EdgeSelectionTool"
    base_class_type="rviz_common::Tool"
  >
    <description>
      Select edge in pose graph
    </description>
  </class>

  <class
    name="dddmr_rviz_default_plugins/SelectNode"
    type="dddmr_rviz_default_plugins::tools::NodeSelectionTool"
    base_class_type="rviz_common::Tool"
  >
    <description>
      Select pose in pose graph
    </description>
  </class>

  <class
    name="dddmr_rviz_default_plugins/SelectPointCloud"
    type="dddmr_rviz_default_plugins::tools::PointCloudSelectionTool"
    base_class_type="rviz_common::Tool"
  >
    <description>
      Selected point cloud
    </description>
  </class>

</library>
